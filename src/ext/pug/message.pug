                    .row
                        .container-fluid.marginTop
                            +makeBox("disable","Rotina programada para esta tarefa")
                                table.data#taskTable1
                                    thead
                                        tr
                                            td
                                                p Data
                                            td
                                                p Status
                                    tbody
                                        tr
                                            td
                                                p 13/05
                                            td
                                                label.allright realizado
        footer
            include include/_footer.pug
        include include/_js-imports.pug