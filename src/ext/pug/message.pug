    head
        include include/_mixins.pug
        //----------------------------[METAS]----------------------------//
        +headerSettings("myRepublic - Detalhes da Tarefa","None description.","myRepublic","#5659A6")
        //---------------------------------------------------------------//
        //---------------------------[IMPORTS]---------------------------//
        include include/_link-imports.pug
        //---------------------------------------------------------------//
    body(onload="taskPage()", page="task")
        header
            include include/_header.pug
            +republicBanner("incendiaria","Detalhes da Tarefa")
        main
            section
                .myWrapper
                    +pageTitle("", "Detalhes da Tarefa")
                    .row.informCardRow
